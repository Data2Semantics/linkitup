{% extends "dashboard.html" %}


<script>
	$(document).ready(function() { 
		
		$.get("{{ url_for('articles') }}", function(data){
			render_articles(data.articles);
		});
		
		$.get("{{ url_for('plugins') }}", function(data) {
			render_articles(data);
		});
		
	});

	function render_articles(articles) {
		$("#articles").select2({ 
			placeholder: "Start typing..." , 
			allowClear: true,
			data: articles 
		}); 
	}


</script>



{% block tabs %}
	<label for="articles"><i class="icon-search"></i> Select an article</label>
	<select id="articles" style="width: 100%; ">
		<option></option>	
	</select>
{% endblock %}




